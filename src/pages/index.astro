---
import { GithubIcon } from "lucide-solid";

import { HTMLX, Button, IconButton } from "~/components/core";

import Pixel from "~/components/other/Pixel.astro";

import { HOST } from "~/utils";
---

<HTMLX>
  <div class="absolute inset-0 z-0 overflow-hidden">
    <Pixel />
  </div>

  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 p-7 z-10">
    <h1 class="text-3xl lg:text-5xl text-neutral-11 text-center font-bold select-none">Regions of Indonesia</h1>
    <div class="flex flex-col gap-1 mt-3 mb-1">
      <div class="h-px bg-gradient-to-r from-transparent via-[#ff0000] to-transparent rounded-full"></div>
      <div class="h-px bg-gradient-to-r from-transparent via-[#ffffff] to-transparent rounded-full"></div>
    </div>
    <div class="flex justify-center items-center gap-3 p-2">
      <Button client:idle as="a" title="Site" href={HOST.SITE()} variant="outline" target="_blank">Site</Button>
      <IconButton client:idle as="a" title="Github" href="https://github.com/regions-of-indonesia" variant="outline" target="_blank">
        <GithubIcon client:idle />
      </IconButton>
    </div>
    <div class="flex justify-center items-center gap-3 p-2">
      <Button client:idle as="a" title="Get started" href={HOST.DOCS("getting-started")} color="primary">Get started</Button>
    </div>
  </div>
</HTMLX>

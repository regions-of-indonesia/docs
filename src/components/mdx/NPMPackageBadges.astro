---
type Props = {
  name: string;
  alpha?: boolean;
  beta?: boolean;
};

const { name, alpha, beta } = Astro.props;
---

<div class="not-prose flex items-center gap-1 lg:gap-2">
  <a
    title="version"
    class="outline-none p-px rounded-full focus-visible:ring-1 focus-visible:ring-neutral-9"
    href={`https://www.npmjs.com/package/@regions-of-indonesia/${name}`}
  >
    <img
      alt="version"
      src={beta
        ? "https://none.deno.dev/ui/badge?c=orange&e=beta"
        : alpha
        ? "https://none.deno.dev/ui/badge?c=orange&e=alpha"
        : `https://none.deno.dev/npm/v/@regions-of-indonesia/${name}`}
    />
  </a>
  <a
    title="size"
    class="outline-none p-px rounded-full focus-visible:ring-1 focus-visible:ring-neutral-9"
    href={`https://bundlejs.com/?q=@regions-of-indonesia/${name}`}
  >
    <img alt="size" src={`https://none.deno.dev/bundlejs/mz/@regions-of-indonesia/${name}`} />
  </a>
</div>
